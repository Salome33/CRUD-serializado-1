<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.controllers.PersonaController">

    <!-- TÍTULO -->
    <top>
        <VBox style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Label text="Sistema CRUD de Gestión de Personas"
                   style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;"
                   alignment="CENTER"/>
            <Label text="Serialización de Datos en Java"
                   style="-fx-text-fill: #ecf0f1; -fx-font-size: 14;"
                   alignment="CENTER">
                <VBox.margin>
                    <Insets top="5"/>
                </VBox.margin>
            </Label>
        </VBox>
    </top>

    <!-- CONTENIDO PRINCIPAL -->
    <center>
        <VBox spacing="20" style="-fx-padding: 20; -fx-background-color: #ecf0f1;">

            <!-- FORMULARIO -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <Label text="Formulario de Persona"
                       style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                <Separator/>

                <GridPane hgap="15" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints minWidth="80" prefWidth="80"/>
                        <ColumnConstraints minWidth="200" prefWidth="200" hgrow="ALWAYS"/>
                        <ColumnConstraints minWidth="80" prefWidth="80"/>
                        <ColumnConstraints minWidth="200" prefWidth="200" hgrow="ALWAYS"/>
                    </columnConstraints>

                    <!-- ID (readonly) -->
                    <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"
                           style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtId" editable="false" promptText="Auto-generado"
                               GridPane.columnIndex="1" GridPane.rowIndex="0"
                               style="-fx-background-color: #f5f5f5;"/>

                    <!-- Nombre -->
                    <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="1"
                           style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtNombre" promptText="Ingrese el nombre"
                               GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                    <!-- Apellido -->
                    <Label text="Apellido:" GridPane.columnIndex="2" GridPane.rowIndex="1"
                           style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtApellido" promptText="Ingrese el apellido"
                               GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                    <!-- Edad -->
                    <Label text="Edad:" GridPane.columnIndex="0" GridPane.rowIndex="2"
                           style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtEdad" promptText="0-150"
                               GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                    <!-- Email -->
                    <Label text="Email:" GridPane.columnIndex="2" GridPane.rowIndex="2"
                           style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtEmail" promptText="ejemplo@email.com"
                               GridPane.columnIndex="3" GridPane.rowIndex="2"/>
                </GridPane>

                <!-- BOTONES DE ACCIÓN -->
                <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
                    <Button text="Crear" onAction="#handleCrear" prefWidth="100"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;">
                        <font><Font size="13"/></font>
                    </Button>
                    <Button text="Actualizar" onAction="#handleActualizar" prefWidth="100"
                            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;">
                        <font><Font size="13"/></font>
                    </Button>
                    <Button text="Eliminar" onAction="#handleEliminar" prefWidth="100"
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;">
                        <font><Font size="13"/></font>
                    </Button>
                    <Button text="Limpiar" onAction="#handleLimpiar" prefWidth="100"
                            style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;">
                        <font><Font size="13"/></font>
                    </Button>
                </HBox>

                <!-- MENSAJE DE ESTADO -->
                <Label fx:id="lblEstado" text="Listo para operar"
                       style="-fx-font-size: 12; -fx-text-fill: #7f8c8d; -fx-padding: 5 0 0 0;"/>
            </VBox>

            <!-- SECCIÓN DE BÚSQUEDA Y TABLA -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <Label text="Listado de Personas"
                       style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                <Separator/>

                <!-- BARRA DE BÚSQUEDA -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Buscar:" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtBuscar" promptText="Buscar por nombre..."
                               prefWidth="300"/>
                    <Button text="Buscar" onAction="#handleBuscar"
                            style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;">
                        <font><Font size="12"/></font>
                    </Button>
                    <Button text="Refrescar" onAction="#handleRefrescar"
                            style="-fx-background-color: #16a085; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;">
                        <font><Font size="12"/></font>
                    </Button>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="lblTotal" text="Total: 0 persona(s)"
                           style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                </HBox>

                <!-- TABLA -->
                <TableView fx:id="tablePersonas" prefHeight="300" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="50"
                                     style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="colNombre" text="Nombre" prefWidth="200"/>
                        <TableColumn fx:id="colApellido" text="Apellido" prefWidth="200"/>
                        <TableColumn fx:id="colEdad" text="Edad" prefWidth="80"
                                     style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="colEmail" text="Email" prefWidth="250"/>
                    </columns>
                    <placeholder>
                        <Label text="No hay personas registradas. ¡Comienza creando una!"/>
                    </placeholder>
                </TableView>
            </VBox>
        </VBox>
    </center>

    <!-- PIE DE PÁGINA -->
    <bottom>
        <HBox style="-fx-background-color: #34495e; -fx-padding: 10;" alignment="CENTER">
            <Label text="© 2024 Sistema CRUD - Desarrollado con JavaFX"
                   style="-fx-text-fill: white; -fx-font-size: 11;"/>
        </HBox>
    </bottom>

</BorderPane>
